{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@mocks/*" : ["./app/core/mocks/*"],
      "@modules/*": ["./app/modules/*"],
      "@tasks/*" : ["./app/tasks/*"],
      "@taskMocks/*" : ["./app/tasks/mocks/*"]
    },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
